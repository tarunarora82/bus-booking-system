{
  "name": "bus-booking-system/backend",
  "description": "Bus Slot Booking System - PHP Backend API",
  "type": "project",
  "version": "1.0.0",
  "require": {
    "php": ">=8.2",
    "ext-pdo": "*",
    "ext-mysqli": "*",
    "ext-json": "*",
    "ext-mbstring": "*",
    "ext-openssl": "*",
    "ext-redis": "*",
    "firebase/php-jwt": "^6.0",
    "phpmailer/phpmailer": "^6.8",
    "predis/predis": "^2.0",
    "vlucas/phpdotenv": "^5.0",
    "monolog/monolog": "^3.0",
    "ramsey/uuid": "^4.0",
    "guzzlehttp/guzzle": "^7.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^10.0",
    "phpstan/phpstan": "^1.0",
    "squizlabs/php_codesniffer": "^3.0"
  },
  "autoload": {
    "psr-4": {
      "BusBooking\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "BusBooking\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "phpunit",
    "analyse": "phpstan analyse src --level=8",
    "cs-check": "phpcs src --standard=PSR12",
    "cs-fix": "phpcbf src --standard=PSR12"
  },
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}